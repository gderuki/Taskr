# Spring Profile (dev or prod)
SPRING_PROFILE=dev

# Database Configuration
DB_USERNAME=db_user
DB_PASSWORD=your_secure_password_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_minimum_256_bits_recommended_for_HS256
