# Spring Profile (dev or prod)
SPRING_PROFILE=dev

# Database Configuration
DB_USERNAME=db_user
DB_PASSWORD=your_secure_password_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_minimum_256_bits_recommended_for_HS256
JWT_EXPIRATION=900000
JWT_REFRESH_EXPIRATION=86400000

# Possible options: minio/local
STORAGE_PROVIDER=minio

# MinIO Configuration if minio enabled
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=taskr-attachments

# Local Storage Configuration if local enabled
STORAGE_ROOT_PATH=uploads

# File Upload Limits
MAX_FILE_SIZE=10MB
MAX_REQUEST_SIZE=10MB

# Production-only variables (required when SPRING_PROFILE=prod)
# DATABASE_URL=jdbc:postgresql://prod-db-host:5432/taskr_prod
# ALLOWED_ORIGIN=https://your-domain.com
# SERVER_PORT=8080